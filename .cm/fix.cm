# -*- mode: yaml -*-
manifest:
  version: 1.0

automations:
  approve_and_merge_dependabot_prs:
      if:
        - true
      run:
        - action: approve@v1
        - action: add-label@v1
          args:
            label: 'approved-dependabot'
            color: '{{ colors.green }}'
        - action: merge@v1

colors:
  orange: 'd93f0b'
  red: 'F6443B'
  longPr: 'E94637'
  mediumPr: 'FBBD10'
  shortPr: '36A853'
  green: '36A853'
  blue: '1A73E8'
