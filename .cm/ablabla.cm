# -*- mode: yaml -*-
manifest:
  version: 1.0

automations:
  automation1:
    if:
      - false
    run: 
      - action: code-review@v1
        args:
          approve_on_LGTM: true
      - action: describe-changes@v1
        args:
          concat_mode: append
  automation2:
    if:
      - true
    run:
      - action: add-label@v1
        args:
          label: "kuku"
