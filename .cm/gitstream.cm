
# -*- mode: yaml -*-

manifest:
  version: 1.0

config:
  ignore_files:
    - 'package-lock.json'
    - 'blabla.txt'
    
automations:
  my_changes:
    if:
      - true
    run: 
      - action: add-label@v1
        args:
          label: 'eladush ha mega mush'
      - action: add-comment@v1
        args:
          comment: 'kushkush'
  check_label_type:
      if:
        - true
      run:
        - action: explain-code-experts@v1
          args:
            lt: 12
        - action: add-comment@v1
          args:
            comment: '11'
