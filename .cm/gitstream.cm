# -*- mode: yaml -*-
manifest:
  version: 1.0

triggers:
  exclude:
    branch:
      - r/renovate/

automations:
  safe-changes:
    if:
      - true
    run:
      - action: add-label@v1
        args:
          label: 'safe-changes'

  senior_review:
    if:
      - {{ files | match(regex=r/src/) | some }}
    run:
      - action: require-reviewers@v1
        args:
          reviewers: [MishaKav]
