
# -*- mode: yaml -*-

manifest:
  version: 1.0

config:
  ignore_files:
    - 'package-lock.json'
    - 'blabla.txt'
  admin:
    users: ["EladKohavi"]
    
automations:
  my_changes:
    if:
      - true
    run: 
      - action: add-label@v1
        args:
          label: 'eladush'
  run_e2e_tests:
      if:
        - {{ pr.approvals | length > 0 }}
      run:
        - action: add-comment@v1
          args:
            comment: |
              '/e2e'
