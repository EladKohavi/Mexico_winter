# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
  label_unresolved_threads:  
    if:  
      - {{ pr.labels }}
    run:
      - action: add-label@v1
        args:
          label: {{ pr.labels }} Unresolved Label(s)
          color: {{ colors.yellow }}
      
colors:
  yellow: 'fbca04'
