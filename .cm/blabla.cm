automations:

  eladush_files:
    if:
      - {{ pr.labels | match(list=['Core', 'Mobile', 'UI']) | nope }}
    run:
      - action: add-label@v1
        args:
          label: "no-labels-problem!"
          color: {{ 'E94637' if (calc.etr >= 20) else ('FBBD10' if (calc.etr >= 5) else '36A853') }}
      - action: add-reviewers@v1
        args:
          reviewers: ['yeelali14']

calc:
  etr: {{ branch | estimatedReviewTime }}
