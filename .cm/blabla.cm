automations:

  eladush_files:
    if:
      - true
    run:
      - action: add-label@v1
        args:
          label: "no-labels-problem!"
          color: {{ 'E94637' if (calc.etr >= 20) else ('FBBD10' if (calc.etr >= 5) else '36A853') }}
      - action: add-comment@v1
        args:
          comment: Welcome {{branch.author_name}}!

calc:
  etr: {{ branch | estimatedReviewTime }}
